{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
			"@/*": ["./*"],
			"@/lib/*": ["./lib/*"],
			"@/services/*": ["./services/*"],
			"@/providers/*": ["./providers/*"],
			"tailwind.config": ["./tailwind.config.js"]
		}
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}